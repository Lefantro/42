#include <stdio.h>
#include <stdlib.h>

char	lowercase(char c)
{
	if ((c >= 'A') && (c <= 'Z'))
	{
		return (c + 32);
	}
	else
	{
		return (c);
	}
}

char	uppercase(char c)
{
	if ((c >= 'a') && (c <= 'z'))
	{
		return (c - 32);
	}
	else
	{
		return (c);
	}
}

int	is_alpha(char c)
{
	if ((('a' <= c) && (c <= 'z')) || (('A' <= c) && (c <= 'Z')))
	{
		return (1);
	}
	else
	{
		return (0);
	}
}

int	beginning_of_word(char c, char prev)
{
	if ((is_alpha(c)) && (!(is_alpha(prev))))
	{
		return (1);
	}
	else
	{
		return (0);
	}
}

