/**/

#include <stdio.h>
#include <stdlib.h>

char	*ft_strncpy(char *dest, char *src, unsigned int n)
{
	char	c;
	int		i;

	c = *src;
	i = 0;
	while (i <= n)
	{
		*(dest + i) = c;
		i = i + 1;
		if (c != '\0')
		{
			c = *(src + i);
		}
	}
	return (dest);
}

int	main(void)
{
	char	*p;
	char	*q;

	q = (char *)malloc(sizeof(char) * 50);
	p = "hello world!";
	ft_strncpy(q, p, 20);
	printf("%s", q);
}
