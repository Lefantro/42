#include <stdio.h>
#include <stdlib.h>

int	char_is_printable(char c)
{
	if ((c < 32) || (c > 126))
	{
		return (0);
	}
	else
	{
		return (1);
	}
}

void	ascii_to_hexa(int n)
{
	char	*mod16;
	char	*hexa;
	int		mod;
	char	c;
	int		i;

	mod16 = "0123456789";
	if (n > 0)
	{
		mod = n % 16;
		c = *(mod16 + mod);
		printf("%c", c);
		// ascii_to_hexa (n / 16);
		// i = i+1;
		// hexa[i] = c;
	}
	// return (hexa);
	// printf ("%s", hexa);
}

